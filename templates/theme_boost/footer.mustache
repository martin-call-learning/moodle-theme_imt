{{!
  Page footer.
}}
<footer id="page-footer"  class="footer {{#additionalinfo.isloggedin}}footer-dark{{/additionalinfo.isloggedin}}">
    {{^additionalinfo.isloggedin}}
        <div class="footer__triangle-1"></div>
        <div class="footer__triangle-2"></div>
        <div class="footer__triangle-3"></div>
    {{/additionalinfo.isloggedin}}
    <div class="imtpn-container">
    <div class="footer__text">
        {{#additionalinfo.footercontent}} {{{ additionalinfo.footercontent }}} {{/additionalinfo.footercontent}}
    </div>
    <div class="footer__links">
        {{{ output.standard_footer_html }}}
        {{{ output.login_info }}}
    </div>
    <div class="footer__mention">
        {{#str}}legal_mention, theme_imtpn{{/str}}
    </div>

    {{{ output.standard_end_of_body_html }}}
  </div>
</footer>

{{!
    Front page full header.
}}
<header class="header">

    <div class="header__triangle-1"></div>
    <div class="header__triangle-2"></div>
    <div class="header__triangle-3"></div>

    {{#fppageheader}}
        <div class="header__bottom">
            <div class="imt-container">
                <div class="header__title">
                    {{{fppageheader}}}
                </div>
                {{#loginurl}}
                    <div class="header__button">
                        <a href="{{loginurl}}" class="btn btn-secondary">
                            {{#str}} login {{/str}}
                        </a>
                    </div>
                {{/loginurl}}
            </div>
        </div>
    {{/fppageheader}}
</header>
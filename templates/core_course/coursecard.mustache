{{!
  @template course_course/coursecard

  This template renders the a card for the course cards.

  Example context (json):
  {
      "courses": [
          {
              "name": "Assignment due 1",
              "viewurl": "https://moodlesite/course/view.php?id=2",
              "courseimage": "https://moodlesite/pluginfile/123/course/overviewfiles/123.jpg",
              "fullname": "course 3",
              "hasprogress": true,
              "progress": 10,
              "visible": true
          }
      ]
  }
}}
<div class="card dashboard-card card-course" role="listitem"
  data-region="course-content"
  data-course-id="{{{id}}}">
    <a href="{{viewurl}}" tabindex="-1" class="course-image" style='background-image: url("{{{courseimage}}}");'></a>
    <div class="title font-weight-bolder">{{ shortname }}</div>

    <div class="link-go-to-content">
      <a class="btn btn-primary rounded-circle p-2" href="{{viewurl}}">
          <img src="{{config.wwwroot}}/theme/imtpn/pix/icons/right-arrow.svg" alt="">
      </a>
  </div>
  {{$progress}}{{/progress}}
</div>
